# Start menu screen stuff defined here
<StartMenuScreen>

    # This section is for app background
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: root.background

    # This section is out screen layout which is a float layout
    FloatLayout:

        # ID for our float layout (if needed)
        id: floatlayout

        # This section is for our app action bar
        ActionBar:

            # Size & Position
            pos_hint: {'top':1}
            height: 55

            # Style
            background_color: '#00000077'

            # Action View
            ActionView:
                use_separator: True

                # Action Previous
                ActionPrevious:
                    halign: 'center'
                    title: f'[b][font={root.Squid}][color=#ffffff]Crypto[/color][color=#2fa7d4]Ko[/font][/color][/b]'
                    with_previous: False
                    markup: True
                    app_icon: "no_picture.png"

        # This section is for our text input
        TextInput:

            # ID for text input
            id: textinput           
            
            # Size & Position
            pos_hint: {"center_x": 0.5, "center_y": 0.78}
            size_hint: (0.6, None)
            height: "60dp"
            line_width: 1

            # Style
            multiline: True
            background_color: "#000000bb"
            foreground_color: "#ffffff"
            cursor_color: "#2fa7d4"
            cursor_width: 2
            font_name: root.SourceCodePro
            halign: "left"
            hint_text: "Enter your text here..."
            hint_text_color: "#00cccc66"
            selection_color: "#77777755"

        # Label for help message
        Label:

            # Size & Position
            pos_hint: {"center_x": 0.5, "center_y": 0.65}
            size_hint: (0.6, 0.2)

            # Style
            markup: True
            text: "[b]Enter text for [color=#ffffff]encryption[/color] or [color=#ffffff]decryption[/color] \nresult will be copied to clipboard![/b]"
            font_name: root.KremlinMenshevik
            color: "00ffff"

        # Encrypt button
        Button:
            id: encryptbutton
            text: "Encrypt"
            size_hint: (0.6, None)
            pos_hint: {"center_x": 0.5, "center_y": 0.55}
            height: "35dp"
            background_color: "#00000077"

            on_press:
                root.encrypt(textinput)

        # Label for help message (decryption)
        Label:

            # Size & Position
            pos_hint: {"center_x": 0.5, "center_y": 0.42}
            size_hint: (0.6, 0.2)

            # Style
            markup: True
            text: "[b]Enter your [color=#ffffff]key[/color] for [color=#ffffff]decryption[/color] \nresult will be copied to clipboard![/b]"
            font_name: root.KremlinMenshevik
            color: "00ffff"

        # This section is for our password input
        TextInput:

            # ID for text input
            id: passwordinput           
            
            # Size & Position
            pos_hint: {"center_x": 0.5, "center_y": 0.30}
            size_hint: (0.6, None)
            height: "30dp"
            line_width: 1

            # Style
            multiline: False
            background_color: "#000000bb"
            foreground_color: "#ffffff"
            cursor_color: "#2fa7d4"
            cursor_width: 2
            font_name: root.SourceCodePro
            halign: "left"
            hint_text: "your key..."
            hint_text_color: "#00cccc55"
            selection_color: "#77777755"

        # Decrypt button
        Button:
            id: decryptbutton
            text: "Decrypt"
            size_hint: (0.6, None)
            pos_hint: {"center_x": 0.5, "center_y": 0.23}
            height: "35dp"
            background_color: "#00000077"

            on_press:
                root.decrypt(textinput, passwordinput)


        # Credit text
        Label:

            # Size & Position 
            pos_hint: {"center_x": 0.5, "center_y": 0.05}
            size_hint: (0.9, None)

            # Style
            markup: True 
            color: "#2fa7d4"
            text: f"[b][font={root.Squid}]by [color=#ffffff]Kourva[/color]...[/font][/b]"
            font_size: "17sp"
       
# Success Notification popup when job done! 
<SuccessPopup@Popup>:

    # Size & Position 
    auto_dismiss: True
    size_hint: 0.9, 0.25

    # Style
    title_font: "Aldo.ttf"
    title: "Done"
    title_color: "#2fa7d4"
    background_color: "#aaaaaadd"
    overlay_color: "#000000cc"

    # Box Layout for popup contents
    BoxLayout:

        # Size & Position
        orientation: 'vertical'

        # Popup text
        Label:

            # Style
            markup: True 
            color: "#2fa7d4"
            text: '[b]successfully copied to clipboard.[/b]'
            font_name: "Aldo.ttf"

# Encryption error Notification popup when job got error! 
<EncryptionErrorPopup@Popup>:

    # Size & Position 
    auto_dismiss: True
    size_hint: 0.9, 0.25

    # Style
    title_font: "Aldo.ttf"
    title: "Error"
    title_color: "#ff0000"
    background_color: "#aaaaaadd"
    overlay_color: "#000000cc"
    separator_color: "#ff0000"

    # Box Layout for popup contents
    BoxLayout:

        # Size & Position
        orientation: 'vertical'

        # Popup text
        Label:
 
            # ID for encryption error text
            id: encryptionerror
            
            # Style
            markup: True 
            color: "#ff0000"
            text: '[b]Message can not be empty.[/b]'
            font_name: "Aldo.ttf"

# Decryption error Notification popup when job got error! 
<DecryptionErrorPopup@Popup>:

    # Size & Position 
    auto_dismiss: True
    size_hint: 0.9, 0.25

    # Style
    title_font: "Aldo.ttf"
    title: "Error"
    title_color: "#ff0000"
    background_color: "#aaaaaadd"
    overlay_color: "#000000cc"
    separator_color: "#ff0000"

    # Box Layout for popup contents
    BoxLayout:

        # Size & Position
        orientation: 'vertical'

        # Popup text
        Label:
 
            # ID for decryption error text
            id: decryptionerror
            
            # Style
            markup: True 
            color: "#ff0000"
            text: '[b]Error while Decrypting your text!\nIncorrect password.[/b]'
            font_name: "Aldo.ttf"

# End of file
